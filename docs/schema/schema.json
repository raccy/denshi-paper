        "type": {
          "description": "エントリーのタイプ",
          "readOnly": true,
          "type": [
            "string"
          ],
          "example": "document",
          "pattern": "folder|document"
        },
        "is_new": {
          "description": "新規フラグ",
          "readOnly": true,
          "type": [
            "boolean"
          ]
        },
        "parent_folder_id": {
          "description": "親フォルダーのID",
          "readOnly": true,
          "type": [
            "string"
          ],
          "format": "uuid"
