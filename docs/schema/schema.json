      ],
      "definitions": {
        "device_color": {
          "description": "機器の色",
          "readOnly": true,
          "type": [
            "string"
          ],
          "pattern": "^#[0-9a-fA-F]{6}$",
          "example": "#ffffff"
        },
        "model_name": {
          "description": "機器のモデル名",
          "readOnly": true,
          "type": [
            "string"
          ],
          "example": "P01"
        },
        "serial_number": {
          "description": "機器のシリアル番号",
          "readOnly": true,
          "type": [
            "string"
          ],
          "pattern": "^[0-9]+$",
          "example": "12345678"
        },
        "sku_code": {
